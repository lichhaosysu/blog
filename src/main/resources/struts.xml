<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<!-- Some or all of these can be flipped to true for debugging -->

	<!-- 设置是否每次HTTP请求到达时，系统都重新加载资源文件 -->
	<constant name="struts.i18n.reload" value="false" />

	<!-- 设置struts 2应用是否使用开发模式 -->
	<constant name="struts.devMode" value="true" />

	<!-- 设置当struts.xml文件改变后，系统是否自动重新加载该文件 -->
	<constant name="struts.configuration.xml.reload" value="false" />

	<!-- 指定struts 2应用所需要的国际化资源文件 -->
	<constant name="struts.custom.i18n.resources" value="globalMessages" />

	<!-- 设置Web应用程序的默认Locale -->
	<constant name="struts.locale" value="zh_CN" />

	<!-- 设置Web应用程序的默认编码集。对于获取中文请求参数值 -->
	<constant name="struts.i18n.encoding" value="utf8" />

	<!-- 设置struts 2文件上传中整个请求内容允许的最大字节数 -->
	<constant name="struts.multipart.maxSize" value="1000000000" />

	<!-- 设置需要struts 2处理的请求后缀，该属性的默认值是action。多个后缀之间以英文逗号“,”隔开 -->
	<constant name="struts.action.extension" value="action" />

	<!-- 设置struts 2是否支持动态方法调用，该属性的默认值是true -->
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />

	<!-- 设置是否通过JAR文件提供静态内容服务，该属性的默认值为true -->
	<constant name="struts.serve.static" value="true" />

	<!-- 设置浏览器是否缓存静态内容，当应用处于开发阶段时，若希望每次请求都获得服务器的最新响应，则可设置该属性为false -->
	<constant name="struts.serve.static.browserCache" value="false" />

	<package name="article" namespace="/" extends="struts-default">

		<interceptors>
			<interceptor-stack name="appDefaultStack">
				<interceptor-ref name="defaultStack">
					<param name="exception.logEnabled">true</param>
					<param name="exception.logLevel">ERROR</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="appDefaultStack" />
		
		<default-action-ref name="index" />

		<global-results>
			<result name="error">/error.jsp</result>
		</global-results>


		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings>
		
		<action name="index" class="articleAction" method="index">
			<result name="success" type="redirectAction">
				<param name="actionName">listArticles</param>
				<param name="namespace">/</param>
			</result>
		</action>
		
		<action name="saveArticle" class="articleAction" method="execute">
		<!--
			<result name="success" type="redirectAction">
				<param name="actionName">viewArticle</param>
				<param name="namespace">/</param>
				<param name="article.articleId">${article.articleId}</param>
			</result>
		-->
			<result name="success" type="redirectAction">
				viewArticle?article.articleId=${article.articleId}
			</result>		
		</action>

		<action name="listArticles" class="articleAction" method="listArticles">
			<result name="listArticles">/jsp/article/listArticles.jsp</result>
		</action>

		<action name="viewArticle" class="articleAction" method="viewArticle">
			<result name="viewArticle">/jsp/article/success.jsp</result>
		</action>

		<action name="editArticle" class="articleAction" method="editArticle">
			<result name="editArticle">/jsp/index.jsp</result>
		</action>

		<action name="deleteArticle" class="articleAction" method="deleteArticle">
			<result name="deleteArticle" type="redirectAction">
				<param name="actionName">listArticles</param>
				<param name="namespace">/</param>
			</result>
		</action>

	</package>
</struts>